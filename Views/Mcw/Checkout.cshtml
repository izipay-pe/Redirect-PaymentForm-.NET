@model Dictionary<string, string>
@{
	ViewData["Title"] = "Checkout";
	var amount = (int.Parse(Model["vads_amount"]) / 100m).ToString("0.00");
	var currency = Model["vads_currency"] == "604" ? "PEN" : "USD";
}

@section extrahead {
}

@section extrastyles {
}

<div class="right-column col-md-6 data-checkout">
    <section class="customer-details">
        <h2>Datos del pago</h2>
        <!-- Order ID -->
        <div class="form-group">
            <label for="orderId">Order-id</label>
            <input readonly class="form-control" name="vads_order_id" value="@Model["vads_order_id"]" />
        </div>
        <!-- Monto -->
        <div class="form-group">
            <label for="amount">Monto</label>
            <input readonly class="form-control" name="amount" value="@amount" />
        </div>
        <!-- Moneda -->
        <div class="form-group">
            <label for="amount">Moneda</label>
            <input readonly class="form-control" name="currency" value="@currency" />
        </div>
    </section>
</div>

<section class="container">
    <!-- Formulario con los datos de pago -->
    <form class="from-checkout" action="https://secure.micuentaweb.pe/vads-payment/" method="post">
        <!-- Inputs generados dinámicamente -->
        <input type="hidden" name="vads_action_mode" value="@Model["vads_action_mode"]" />
        <input type="hidden" name="vads_amount" value="@Model["vads_amount"]" />
        <input type="hidden" name="vads_ctx_mode" value="@Model["vads_ctx_mode"]" />
        <input type="hidden" name="vads_currency" value="@Model["vads_currency"]" />
        <input type="hidden" name="vads_cust_address" value="@Model["vads_cust_address"]" />
        <input type="hidden" name="vads_cust_cell_phone" value="@Model["vads_cust_cell_phone"]" />
        <input type="hidden" name="vads_cust_city" value="@Model["vads_cust_city"]" />
        <input type="hidden" name="vads_cust_country" value="@Model["vads_cust_country"]" />
        <input type="hidden" name="vads_cust_email" value="@Model["vads_cust_email"]" />
        <input type="hidden" name="vads_cust_first_name" value="@Model["vads_cust_first_name"]" />
        <input type="hidden" name="vads_cust_last_name" value="@Model["vads_cust_last_name"]" />
        <input type="hidden" name="vads_cust_state" value="@Model["vads_cust_state"]" />
        <input type="hidden" name="vads_cust_zip" value="@Model["vads_cust_zip"]" />
        <input type="hidden" name="vads_cust_national_id" value="@Model["vads_cust_national_id"]" />
        <input type="hidden" name="vads_order_id" value="@Model["vads_order_id"]" />
        <input type="hidden" name="vads_page_action" value="@Model["vads_page_action"]" />
        <input type="hidden" name="vads_payment_config" value="@Model["vads_payment_config"]" />
        <input type="hidden" name="vads_redirect_success_timeout" value="@Model["vads_redirect_success_timeout"]" />
        <input type="hidden" name="vads_return_mode" value="@Model["vads_return_mode"]" />
        <input type="hidden" name="vads_site_id" value="@Model["vads_site_id"]" />
        <input type="hidden" name="vads_trans_date" value="@Model["vads_trans_date"]" />
        <input type="hidden" name="vads_trans_id" value="@Model["vads_trans_id"]" />
        <input type="hidden" name="vads_url_success" value="@Model["vads_url_success"]" />
        <input type="hidden" name="vads_version" value="@Model["vads_version"]" />
        <input type="hidden" name="signature" value="@Model["signature"]" />

        <button class="btn btn-checkout" type="submit" name="pagar">Pagar</button>
    </form>
</section>

@section extrajs {
    <script>
    </script>
}
