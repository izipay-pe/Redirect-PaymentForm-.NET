@using Redirect_PaymentForm_.NET.Models
@model PaymentResponse
@{
    ViewData["Title"] = "Resultado";
    var amount = (int.Parse(Model.Parameters["vads_amount"]) / 100m).ToString("0.00");
    var currency = Model.Parameters["vads_currency"] == "604" ? "PEN" : "USD";
}

<section class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="center-column col-md-6">
            <section class="result-form">
                <h2>Resultado de pago:</h2>
                <hr>
                <p><strong>Estado:</strong> <span>@Model.Parameters["vads_trans_status"]</span></p>
                <p>
                    <strong>Monto:</strong> 
                    <span>@currency</span>
                    <span>@amount</span>
                </p>
                <p><strong>Order-id:</strong> <span>@Model.Parameters["vads_order_id"]</span></p>
                <hr>
                <details>
                    <summary><h2>Respuesta recibida del servidor:</h2></summary>
                    <hr>
                    <pre>@Model.PrettyJson</pre>
                </details>
                <hr>
                <form asp-controller="Mcw" asp-action="Index" method="get">
                    <button class="btn btn-primary">Volver a probar</button>
                </form>
            </section>
        </div>
        <div class="col-md-3"></div>
    </div>
</section>

@section extrajs {
    <script>
    </script>
}